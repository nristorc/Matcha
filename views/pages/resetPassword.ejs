<%- include('../partial/head')%>

<div class="container">

    <div class="auth-page">
        <div class="container auth-container">
            <%- messages('partial/message', locals) %>
            <img class="mb-4" src="../../public/img/logo.png" alt="" width="125" height="125">
            <h1 class="h3 mb-3 font-weight-normal">Welcome to <strong>RoooCool</strong></h1>
            <h2 class="h6 mb-4 font-weight-light"><em>Le 1er site de rencontres où vous ne serez pas pris pour un pigeon</em></h2>
        </div>
    </div>
</div>

<form method="post" action="/verify/reset/:resetToken" id="formReset">
    <div class="form-group" style="text-align: center">
        <div class="display-register">
            <div class="form-group">
                <h5>Ré-initialisation de votre mot de passe</h5>
                <input type="hidden" name="resetToken" value="<%=resetToken%>">
                <label for="modifyPassword">Nouveau mot de passe</label>
                <input type="password" class="form-control" id="modifyPassword" name="modifyPassword" placeholder="Nouveau mot de passe">
                <br>
                <label for="modifyPasswordConfirm">Confirmation du nouveau mot de passe</label>
                <input type="password" class="form-control" id="modifyPasswordConfirm" name="modifyPasswordConfirm" placeholder="Confirmation mot de passe">
                <button type="submit" class="btn login-btn" style="margin-top: 15px">Confirmer</button>
            </div>
        </div>
    </div>
</form>

<%- include('../partial/footer')%>